			checkout scm
			sh 'git clean -dfx'
		}

		dir('service-1') {	
			stage('Build') {
				env.PATH = "${tool 'gradle'}/bin:${env.PATH}"
				sh 'gradle build'
			}
			
			stage('Deploy') {
			
			}
			
			stage('Healthcheck') {
			
			}
		}
	}
	catch (exc) {
		echo 'Something failed, I should sound the klaxons!'
		throw exc
	}
}